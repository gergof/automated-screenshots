{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["esnext"],
		"allowJs": true,
		"rootDir": "src",
		"outDir": "build",
		"resolveJsonModule": true,
		"strict": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"declaration": true
	},
	"exclude": ["node_modules", "build"]
}
